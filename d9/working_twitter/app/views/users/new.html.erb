<h1>Create an account:</h1>

<%= form_for(@new_user, url: users_path, method: "post") do |f| %>
  <div class="form-group">
    <%= f.label :handle %>
    <%= f.text_field :handle, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Hook me up", :class => "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Take me back!", "/", :class => "btn btn-warning" %>
